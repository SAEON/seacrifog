    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch-prettier": "onchange \"**/!(__generated__)/*.{js,jsx,scss}\" -- prettier --write {{changed}}"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
