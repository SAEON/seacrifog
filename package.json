{
  "name": "api2",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "email": "zach@saeon.ac.za",
    "name": "Zach Smith",
    "url": "http://saeon.ac.za"
  },
  "scripts": {
    "start": "nodemon",
    "prettier": "prettier --write \"src/**/*.@(js|graphql)\"",
    "run:dev": "NODE_ENV=development npm-run-all server:dev",
    "server:dev": "babel-node ./src/bin",
    "start:prod": "NODE_ENV=production npm-run-all clean:prod build:prod copy:gqlschema copy:sql copy:csvs copy:env server:prod",
    "server:prod": "node ./dist/bin",
    "clean:prod": "rimraf ./dist",
    "build:prod": "babel ./src --out-dir dist",
    "copy:gqlschema": "copyfiles -u 1 ./src/schema.graphql dist/",
    "copy:sql": "copyfiles -u 2 \"./src/db/sql/**/*\" dist/db/",
    "copy:env": "copyfiles ./.env dist/",
    "copy:csvs": "copyfiles -u 2 \"./src/db/csvs/**/*\" dist/db/"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "core-js": "^3.2.1",
    "csv": "^5.1.3",
    "csv-parse": "^4.4.6",
    "dataloader": "^1.4.0",
    "debug": "~4.1.1",
    "dotenv": "^8.1.0",
    "express": "~4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "graphql-type-json": "^0.3.0",
    "morgan": "~1.9.1",
    "pg": "^7.12.1",
    "ramda": "^0.26.1",
    "rimraf": "^3.0.0",
    "sift": "^8.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "copyfiles": "^2.1.1",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  }
}
